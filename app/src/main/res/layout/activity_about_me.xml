<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.aboutme.AboutMeActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_rect_poster"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_to_large"
        android:layout_marginStart="@dimen/small_to_normal"
        android:background="@drawable/ic_backbtn"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_profile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/profile"
        android:layout_marginTop="@dimen/small_to_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_back_about" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:textColor="@color/colorBlackNormal"
        android:text="Johannes Christian"
        android:textSize="@dimen/text_ultra"
        android:layout_marginTop="@dimen/large_to_huge"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civ_profile"/>

    <View
        android:id="@+id/v_line_detail"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/small_to_normal"
        android:layout_marginEnd="@dimen/small_to_normal"
        android:layout_marginTop="@dimen/very_small"
        android:background="@color/colorBlackNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_to_normal"
        android:layout_marginTop="@dimen/small_to_normal"
        android:fontFamily="@font/rubik_regular"
        android:text="Email"
        android:textColor="@color/colorBlackNormal"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line_detail"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_to_normal"
        android:layout_marginEnd="@dimen/small_to_normal"
        android:fontFamily="@font/rubik_medium"
        android:text="yohaneschristian2104@gmail.com"
        android:textColor="@color/colorDarkPrimary"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line_detail"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_birthdate_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_to_normal"
        android:layout_marginTop="@dimen/small_to_normal"
        android:fontFamily="@font/rubik_regular"
        android:text="Birthday"
        android:textColor="@color/colorBlackNormal"
        android:textSize="@dimen/text_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email_title"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_bdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_to_normal"
        android:layout_marginEnd="@dimen/small_to_normal"
        android:fontFamily="@font/rubik_medium"
        android:text="21 April 2000"
        android:textColor="@color/colorDarkPrimary"
        android:textSize="@dimen/text_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_email"/>

    <View
        android:id="@+id/v_line_detail2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/small_to_normal"
        android:layout_marginEnd="@dimen/small_to_normal"
        android:layout_marginTop="@dimen/very_small"
        android:background="@color/colorBlackNormal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_birthdate_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_about_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/small_to_normal"
        android:layout_marginTop="@dimen/small_to_normal"
        android:layout_marginEnd="@dimen/small_to_normal"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/about"
        android:textAlignment="center"
        android:textColor="@color/colorBlackLight"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_line_detail2"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="177dp"
        android:layout_height="110dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_bg_study" />


</androidx.constraintlayout.widget.ConstraintLayout>